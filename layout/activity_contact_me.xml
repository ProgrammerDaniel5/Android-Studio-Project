<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    tools:context=".ContactMeActivity">

    <Button
        android:id="@+id/contactReturnButton"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:text="@string/return_button"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginEnd="5dp" />

    <EditText
        android:id="@+id/editContactTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:hint="@string/contact_me_topic"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/editContactMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="@string/contact_me_message"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/contactSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/submit_button"
        android:textColor="@color/white"
        android:backgroundTint="@color/black" />
</LinearLayout>
