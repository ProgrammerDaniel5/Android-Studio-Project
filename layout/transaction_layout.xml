<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/app_background">

        <Button
            android:id="@+id/transactionLayoutReturnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/return_button"
            android:textColor="@color/white"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/new_transaction"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/transactionAccountSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:prompt="@string/select_account_prompt" />

            <Spinner
                android:id="@+id/transactionCardSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:prompt="@string/select_card_prompt" />

            <EditText
                android:id="@+id/editTransactionAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_margin="8dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:hint="@string/transaction_amount"
                android:textColorHint="@color/grey" />

            <Spinner
                android:id="@+id/transactionTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:prompt="@string/select_type_prompt" />

            <Spinner
                android:id="@+id/transactionCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:prompt="@string/select_category_prompt" />

            <EditText
                android:id="@+id/editTransactionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_margin="8dp"
                android:singleLine="false"
                android:maxLength="150"
                android:hint="@string/optional_description"
                android:textColorHint="@color/grey" />


            <EditText
                android:id="@+id/editTransactionDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:layout_margin="8dp"
                android:singleLine="true"
                android:focusable="false"
                android:inputType="none"
                android:maxLength="20"
                android:hint="@string/transaction_date_and_time"
                android:textColorHint="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regular_payment_subscription"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical" />

                <CheckBox
                    android:id="@+id/subscriptionCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <Spinner
                android:id="@+id/subscriptionIntervalSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:prompt="@string/select_interval_prompt" />

        </LinearLayout>

        <Button
            android:id="@+id/saveTransactionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/submit_button"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/black" />
    </LinearLayout>
</ScrollView>